{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-start gy-4">
            <div class="col-md-6">
                <div class="section-header text-center mb-xl">
                    <h2 class="section-title mb-sm">{{ place.name }}</h2>
                    <p class="section-description">{{ place.description }}</p>
                </div>
                <div class="venues-grid">
                    <div class="card">
                        <img src="https://picsum.photos/400/200?random={{ place.id }}" alt="{{ place.name }}" class="card-img card-img-top">
                        <div class="card-body">
                            <h3 class="card-title">{{ place.name }}</h3>
                            <p class="card-text">{{ place.type.name }}</p>
                            <p class="card-text venue-location">{{ place.address }}</p>
                            <p class="card-text venue-capacity">Jusqu'à {{ place.capacity }} personnes</p>
                            <p class="card-text">{{ place.description }}</p>
                            <p class="venue-price">À partir de {{ place.price }}€/jour</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 d-flex justify-content-center">
                <div class="card shadow-sm p-4 w-100" style="max-width: 600px;">
                    <h1 class="text-center text-primary">Réservation</h1>

                    {% if reservationForm.vars.errors|length > 0 %}
                        <div class="alert alert-danger">
                            {{ form_errors(reservationForm) }}
                        </div>
                    {% endif %}

                    {{ form_start(reservationForm) }}
                    <div class="mb-3">
                        {{ form_row(reservationForm.startDate, {
                            'label': 'Date de début',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(reservationForm.endDate, {
                            'label': 'Date de fin',
                            'attr': {'class': 'form-control'}
                        }) }}
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Réserver</button>
                    {{ form_end(reservationForm) }}

                    <a href="/" class="btn btn-secondary w-100 mt-2">Retour</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
